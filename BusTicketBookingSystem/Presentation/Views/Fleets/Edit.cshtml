@model Presentation.Models.ViewModels.FleetEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="page-header">
        <nav class="breadcrumb">
            <a href="/">Home</a>
            <span>›</span>
            <a href="/Fleets">Fleets</a>
            <span>›</span>
            <span class="current">Search</span>
        </nav>

        <h1 class="page-title">Fleet Management – Search Results</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form action="/Fleets/Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group mb-3">
                <label class="control-label">Name</label>
                <input class="form-control" type="text" value="@Model.Name" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Year Built</label>
                <input class="form-control" type="number" value="@Model.YearBuilt" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Image</label>
                <input class="form-control" type="file" />
            </div>
        </form>
    </div>
</div>